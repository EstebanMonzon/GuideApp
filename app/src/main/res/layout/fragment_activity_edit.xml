<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:orientation="vertical"
    tools:context=".fragments.ActivityEditFragment">

    <TextView
        android:id="@+id/txtActivityRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Editar Actividad"
        android:textAlignment="textStart"
        android:textSize="24sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp">

            <!-- Title -->
            <TextView
                android:id="@+id/txtActivityTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Titulo"
                android:textColor="@color/gris_secundario" />

            <EditText
                android:id="@+id/activityTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/naranja"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="@color/black" />
            <!-- City -->
            <TextView
                android:id="@+id/txtActivityCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ciudad"
                android:textColor="@color/gris_secundario" />

            <EditText
                android:id="@+id/activityCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/naranja"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="@color/black" />
            <!-- Province -->
            <TextView
                android:id="@+id/txtActivityProvince"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Provincia"
                android:textColor="@color/gris_secundario" />

            <EditText
                android:id="@+id/activityProvince"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/naranja"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="@color/black" />
            <!-- Country -->
            <TextView
                android:id="@+id/txtActivityCountry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pais"
                android:textColor="@color/gris_secundario" />

            <EditText
                android:id="@+id/activityCountry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/naranja"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="@color/black" />
            <!-- Descripcion -->
            <TextView
                android:id="@+id/txtActivityDescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DescripciÃ³n"
                android:textColor="@color/gris_secundario" />

            <EditText
                android:id="@+id/activityDescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/naranja"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="@color/black" />
            <!-- Latitude -->
            <TextView
                android:id="@+id/txtActivityLat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Latitud"
                android:textColor="@color/gris_secundario" />

            <EditText
                android:id="@+id/activityLat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/naranja"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="@color/black" />
            <!-- Longitud -->
            <TextView
                android:id="@+id/txtActivityLong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Longitud"
                android:textColor="@color/gris_secundario" />

            <EditText
                android:id="@+id/activityLong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/naranja"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/btnActividadGuardar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#EE8146"
                android:text="Guardar" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>